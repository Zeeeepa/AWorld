{
    "mcpServers": {
        "fetch": {
            "command": "uvx",
            "args": [
                "-i",
                "https://mirrors.aliyun.com/pypi/simple/",
                "mcp-server-fetch",
                "--ignore-robots-txt"
            ]
        },
        "time": {
            "command": "uvx",
            "args": [
                "mcp-server-time",
                "--local-timezone",
                "Asia/Shanghai"
            ]
        }
    }
}